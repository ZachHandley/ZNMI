{
  "name": "znmi",
  "type": "module",
  "version": "0.0.1",
  "description": "A simple and easy TypeScript wrapper around NMI's API",
  "files": [
    "dist"
  ],
  "main": "./dist/znmi.umd.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/znmi.js",
  "exports": {
    ".": {
      "import": "./dist/znmi.js",
      "require": "./dist/znmi.umd.cjs"
    }
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "start": "bun index.ts",
    "prepublish": "bun run build",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.2",
    "zod": "^3.22.4"
  }
}
